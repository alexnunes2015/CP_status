{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Launch built-in server",
        "type": "php",
        "request": "launch",
        "runtimeArgs": [
          "-S",
          "localhost:8000",
          "-t",
          "."
        ],
        "runtimeExecutable": "C:/xampp/php/php.exe" ,
        "port": 9000,
        "serverReadyAction": {
          "action": "openExternally"
        }
      },
      {
        "name": "Executar servidor PHP",
        "type": "php",
        "request": "launch",
        "program": "${file}",
        "cwd": "${fileDirname}",
        "port": 9000,
        "runtimeExecutable": "C:/xampp/php/php.exe" // Verifique o caminho correto para o execut√°vel do PHP no seu sistema
      }
    ]
  }
  